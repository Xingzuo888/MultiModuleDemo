<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is MainActivity" />

    <Button
        android:id="@+id/btnSign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="签到" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="登录" />

    <Button
        android:id="@+id/btnShowUserInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="显示LoginComponent中的UserInfoFragment" />

    <Button
        android:id="@+id/btnShowActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="通过ARouter进行activity页面跳转" />

    <Button
        android:id="@+id/btnShowARouter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="通过ARouter进行module页面跳转" />

    <LinearLayout
        android:id="@+id/llFragmentContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    </LinearLayout>
</LinearLayout>